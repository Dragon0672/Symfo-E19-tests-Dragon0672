{% extends 'admin/admin_layout.html.twig' %}

{% block body %}
    <h1>Movie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ movie.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ movie.slug }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>
                        {% for genre in movie.genres %}
                            <li> {{ genre }}</li>
                        {% else %}
                            <li>Aucun genre associ√©</li>
                        {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <img src="{{ asset('uploads/pictures/' ~ (movie.picture ?: 'default.png' )) | imagine_filter('thumb_admin_show') }}">
                </td>
            </tr>
        </tbody>
    </table>

    <hr>

    <ul class="list-unstyled list-inline">
        <li class="list-inline-item">
            <a class="btn btn-success" href="{{ path('movie_index') }}">Back to the list</a>
        </li>
        <li class="list-inline-item">
            <a class="btn btn-primary" href="{{ path('movie_edit', { 'id': movie.id }) }}">Edit</a>
        </li>
        <li class="list-inline-item">
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}